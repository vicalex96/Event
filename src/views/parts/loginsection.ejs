
<div class="modal-dialog text-center">
  <div class="col-sm-8 main-section">
    <div class="modal-content">
      <div class="col-12 user-img">
        <img src="img/user.png">
      </div>

      <!-- messages -->
      <h1 class="text-center">
        <span class="fa fa-sign-in"></span> Login
      </h1>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
      <% } %>

      <form class="col-12" action="/login" method="post">
        <div class="form-group icon-user" id="user-group">
          <input type="email" name="email" class="form-control" placeholder="usuario"/>
        </div>
        <div class="form-group icon-pencil" id="contrasena-group">
          <input type="password" name="password" class="form-control" placeholder="contraseÃ±a"/>
        </div>
        <input type="submit" value="ingresar" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>
