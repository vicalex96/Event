<div class="row">
      <!-- ITEMS -->
      <% for(var i = 0; i < evento.length; i++) { %>
        <div class="col-lg-4 col-sm-4 portfolio-item">
          <div class="card h-100">
            <a href="#"><img class="card-img-top" src="img/imagen2.jpg" alt=""></a>
            <div class="card-body">
              <h4 class="card-title"><%= evento[i].title %></h4>
              <p class="card-text">
                <%= evento[i].description %>
              </p>
          </div>
          
          <form class= "link" action="/editor/<%= evento[i]._id %>?_method=DELETE"
            method= "POST">
              <input type="submit" value="Eliminar">
          </form>
        </div>
      </div>
     <% } %>
</div>
